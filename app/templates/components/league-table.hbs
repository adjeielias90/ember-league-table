<table class="w-full">
  <thead>
    <th></th>
    <th>Team</th>
    <th>Played</th>
    <th>Won</th>
    <th>Drawn</th>
    <th>Lost</th>
    <th>For</th>
    <th>Against</th>
    <th>GD</th>
    <th>Points</th>
    <th>Form</th>
  </thead>
  <tbody>
    {{#each (sort-by "points:desc" @teams) as |team index|}}
      <tr>
        <td>{{add 1 index}}</td>
        <td>{{team.name}}</td>
        <td>{{team.games.length}}</td>
        <td>{{team.gamesWon.length}}</td>
        <td>{{team.gamesDrawn.length}}</td>
        <td>{{team.gamesLost.length}}</td>
        <td>{{team.homeGoalsScored}}</td>
        <td>{{team.goalsConceded}}</td>
        <td>{{team.goalDifference}}</td>
        <td>{{team.points}}</td>
        <td>FORM</td>
      </tr>
    {{/each}}
  </tbody>
</table>